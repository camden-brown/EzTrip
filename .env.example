# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=eztrip

# Gin Mode (debug for development, release for production)
GIN_MODE=debug

# CORS (optional)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Auth0 Configuration
AUTH0_DOMAIN=eztrip.us.auth0.com
AUTH0_ISSUER_URL=https://eztrip.us.auth0.com/

# API Audience (use dev for local development, prod for production)
# Development: https://api-dev.ez-trip.ai
# Production:  https://api.ez-trip.ai
AUTH0_AUDIENCE=https://api-dev.ez-trip.ai

# Auth0 Management API Credentials (for Go API runtime operations)
# Get these from Terraform output after applying: tofu output api_management_client_id
AUTH0_CLIENT_ID=your-api-management-m2m-client-id
AUTH0_CLIENT_SECRET=your-api-management-m2m-client-secret

# Auth0 Database Connection (optional, defaults to "Username-Password-Authentication")
AUTH0_CONNECTION=Username-Password-Authentication

# Auth0 Terraform Management API Credentials (for infrastructure management)
TF_VAR_auth0_client_id=your-terraform-management-client-id
TF_VAR_auth0_client_secret=your-terraform-management-client-secret

# LLM Configuration
LLM_PROVIDER=xai
XAI_API_KEY=your-xai-api-key-here

# Cloudflare Configuration (for OpenTofu/Terraform)
# Get API token from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
