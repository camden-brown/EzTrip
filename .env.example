# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_NAME=eztrip

# Gin Mode (debug for development, release for production)
GIN_MODE=debug

# CORS (optional)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Auth0 Configuration
# For JWT validation (required for API authentication)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_ISSUER_URL=https://your-tenant.auth0.com/
AUTH0_AUDIENCE=https://your-api-identifier

# For Management API (required for seeding users)
# Get these from your Auth0 Management API application
AUTH0_CLIENT_ID=your-management-api-client-id
AUTH0_CLIENT_SECRET=your-management-api-client-secret

# Auth0 Database Connection (optional, defaults to "Username-Password-Authentication")
AUTH0_CONNECTION=Username-Password-Authentication
